<script>
    function deleteBanner(bannerId) {
    console.log("BannerId:", bannerId);

    // Show a confirmation dialog
    Swal.fire({
        title: 'Are you sure?',
        text: 'You are about to delete this banner.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/deletebanner/${bannerId}`, {
                method: "POST"
            }).then((response) => {
                if (response.status == 200) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'The banner has been deleted.',
                        icon: 'success',
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to delete the banner.',
                        icon: 'error'
                    });
                }
            }).catch((error) => {
                Swal.fire({
                    title: 'Error!',
                    text: 'Failed to delete the banner. Please try again later.',
                    icon: 'error'
                });
            });
        }
    });
}


<body>
    <div class="container">
        <h1 class="report-title">Sales Report</h1>
        <div class="export-buttons">
            <a href="#" class="btn btn-primary" id="exportpdf">Export to PDF</a>
            <a href="#" class="btn btn-primary" id="exportexcel">Export to Excel</a>
        </div>
        <table class="report-table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>User</th>
                    <th>PaymentMethod</th>
                    <th>Products</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {{#each order}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.user.name}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>
                    {{#each this.items}}
                        {{this.productId.name}}{{#unless @last}}, {{/unless}}
                    {{/each}}
                    </td>
                    <td>
                    {{#each this.items}}
                        {{this.quantity}}
                    {{/each}}
                    </td>
                    <td>{{formatDate this.Date}}</td>
                    <td>{{this.total}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>


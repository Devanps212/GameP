<style>

            @font-face {
            font-family: audiowide;
            src: url(../fonts/Audiowide-Regular.ttf);
        }
    body{
        font-family: "audiowide";
        background: rgb(255,0,0);
        background: linear-gradient(266deg, rgba(255,0,0,1) 0%, rgba(0,65,128,1) 56%, rgba(0,0,0,1) 100%);
    }
    /* Adjust card size */
     .card.py-5 {
    max-width: 80%; /* Adjust the maximum width as needed */
    margin: 0 auto;
    margin-right: 9rem;
    margin-top: 5rem;
}
    

         #searchInput {
            /* Existing input styles ... */
            width: 80%; /* Adjust the width of the input */
        }

        #searchButton {
            /* Button styles */
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 15px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: -10px;
            margin-left: 23px;
        }

        #searchButton:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }
        
         #searchInput {
            padding: 10px;
            border: none;
            border-radius: 4px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Adding a subtle shadow */
            width: 96%;
        }

        .search-bar {
            margin-bottom: 20px;
        }
        .cards {
            width: 80%; /* Adjust the desired width */
            margin: 0 auto !important;
            background-color: azure;
            padding: 16px;
            border-radius: 4px;
            max-width: 800px !important;
            /* {{!-- margin-right: 9rem;
            margin-top: 5rem; --}} */
        }
        tbody
        {
            background-color: darkgrey;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            color: white;
            text-decoration: none;
            cursor: pointer;
            font-weight: bold;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
        }
         body {
            font-family: Arial, sans-serif;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .table th {
            background-color: #007bff; /* Set the background color for table header */
            color: #fff; /* Set text color */
            padding: 10px; /* Add padding for spacing */
            text-align: left; /* Align text to the left */
        }

        .table td, .table th {
            border: 1px solid #ddd; /* Add borders to cells */
            padding: 8px; /* Add padding for spacing */
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2; /* Alternate row background color */
        }
    </style>
  
</head>
<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a href="/admin/dashboard" class="logo d-flex align-items-center">
        <img src="/admin/dashboard" alt="">
        <span class="d-none d-lg-block">ADMIN</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

    <div class="search-bar">
      <form class="search-form d-flex align-items-center" method="POST" action="#">
        <input type="text" name="query" placeholder="Search" title="Enter search keyword">
        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
      </form>
    </div><!-- End Search Bar -->

    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">

        <li class="nav-item d-block d-lg-none">
          <a class="nav-link nav-icon search-bar-toggle " href="#">
            <i class="bi bi-search"></i>
          </a>
        </li><!-- End Search Icon-->

        

        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="/Pictures/profile/{{adminProfile.image}}" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2">{{adminProfile.name}}</span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <h6>{{adminProfile.name}}</h6>
              <span>{{adminProfile.job}}</span>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/admin/profile">
                <i class="bi bi-person"></i>
                <span>My Profile</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/admin/logout">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">
    <ul class="sidebar-nav" id="sidebar-nav" style="font-family: 'Open Sans'; margin-top: 62px;">
      <li class="nav-item">
        <a class="nav-link " href="/admin/home">
          <i class="bi bi-grid"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/category">
          <i class="bi bi-menu-button-wide"></i><span>Category</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
      </li><!-- End Components Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/orders">
          <i class="bi bi-journal-text"></i><span>Order</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
      </li><!-- End Forms Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/addProducts">
          <i class="bi bi-layout-text-window-reverse"></i><span>Add Products</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
      </li><!-- End Tables Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/userview">
          <i class="bi bi-bar-chart"></i><span>Users</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
      </li><!-- End Charts Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed"  href="/admin/products">
          <i class="bi bi-gem"></i><span>Manage products</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
      </li><!-- End Icons Nav -->

      <li class="nav-heading">Pages</li>
      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/couponList">
          <i class="bi bi-person"></i>
          <span>Coupon Management</span>
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/UPGames">
          <i class="bi bi-person"></i>
          <span>Upcoming Games Add</span>
        </a>
      </li><!-- End Profile Page Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/banner">
          <i class="bi bi-question-circle"></i>
          <span>Banner Management</span>
        </a>
      </li><!-- End F.A.Q Page Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/Referral">
          <i class="bi bi-envelope"></i>
          <span>Referral Code Management</span>
        </a>
      </li><!-- End Contact Page Nav -->

    </ul>

  </aside>
  <div class="card py-5 float-end">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">USERS LIST</h5>
            <form action="/admin/searchUser" method="post">
            <div class="search-bar d-flex align-items-center mb-4">
                <input type="text" id="searchInput" name="search" placeholder="Search by name..." class="form-control" style=" box-shadow: inset 0px 0px 9px -5px black;">
                <button id="searchButton" class="btn">Search</button>
            </div>
            </form>
             <div class="table-container">
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                    <tr>
                        <th class="border-bottom-0">Id</th> 
                        <th class="border-bottom-0">Name</th>
                        <th class="border-bottom-0">Email</th>
                        <th class="border-bottom-0">Mobile</th>
                        <th class="border-bottom-0">Status</th>
                        <th class="border-bottom-0">Action</th>
                        <th class="border-bottom-0"></th>
                    </tr>
                </thead>
                <tbody style="color: black;">
                    {{#each user}}
                    <tr>
                        <td class="border-bottom-0"><h5>{{_id}}</h5></td>
                        <td class="border-bottom-0"><h5>{{name}}</h5></td>
                        <td class="border-bottom-0"><h5>{{email}}</h5></td>
                        <td class="border-bottom-0"><h5>{{number}}</h5></td>
                        <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">
                              {{#if is_blocked}}
                                 Blocked
                              {{else}}
                                 Active
                              {{/if}}
                       </h6>
                       </td>
                        <td class="border-bottom-0">
                            {{#if is_blocked}}
                            <a href="/admin/unblock?id={{_id}}" class="btn btn-success">Unblock</a>
                            {{else}}
                            <a href="/admin/block?id={{_id}}" class="btn btn-danger">Block</a>
                            {{/if}}
                        </td>
                        <td class="border-bottom-0">
                           <a href="/admin/deleteUser?id={{_id}}" class="btn btn-danger">Delete</a>
                           <a href="/admin/userOrder?userId={{_id}}" class="btn btn-info">View Orders</a>
                        </td>
                        
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


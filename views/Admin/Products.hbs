<script>
  function showDeleteConfirmation(productId) {
    Swal.fire({
      title: 'Delete Product',
      text: 'Are you sure you want to delete this product?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
      cancelButtonText: 'Cancel',
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url:`/admin/delete?id=${productId}`,
          method:"POST",
          success:(response)=>
          {
            console.log(response)
            if(response.status == true)
            {
              Swal.fire({
              title: 'Product Deleted',
              text: 'The product has been deleted successfully',
              icon: 'success',
              confirmButtonColor: '#3085d6',
              confirmButtonText: 'OK',
              }).then(()=>{
                const productRow = $(`tr[data-product-id="${productId}"]`);
                 productRow.remove(); 
              })
            }
            else
            {
              Swal.fire({
                title: 'Cannot Delete Product',
                text: 'An error occurred while deleting the product. Please try again.',
                icon: 'error',
                confirmButtonColor: '#d33',
                confirmButtonText: 'OK',
              });
            }
          }
        })
      } else {
        // If user cancels, do nothing
        // You can add optional code here if needed
      }
    });
  }
</script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lightbox = document.getElementById('lightbox');
    const enlargedImage = document.getElementById('enlarged-image');
    const closeLightbox = document.getElementById('close-lightbox');
    const imageClickables = document.querySelectorAll('.image-clickable');
    const imageHover = document.querySelectorAll('.image-hover');

    imageClickables.forEach(function(imageClickable, index) {
      imageClickable.addEventListener('click', function() {
        const imageSrc = this.getAttribute('data-image-src');
        enlargedImage.src = imageSrc;
        lightbox.style.display = 'block';
      });

      // Add the hover effect when the mouse enters the image
      imageClickable.addEventListener('mouseenter', function() {
        imageHover[index].classList.add('hovered');
      });

      // Remove the hover effect when the mouse leaves the image
      imageClickable.addEventListener('mouseleave', function() {
        imageHover[index].classList.remove('hovered');
      });
    });

    closeLightbox.addEventListener('click', function() {
      lightbox.style.display = 'none';
    });
  });
</script>


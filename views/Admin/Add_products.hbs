<script>
       document.getElementById('fileInput').addEventListener('change', function () {
        const imageContainer = document.getElementById('image-container');
        imageContainer.innerHTML = ''; // Clear the previous images

        const maxFiles = 4; // Set the maximum number of files allowed
        const allowedImageTypes = ['image/jpeg', 'image/png', 'image/gif'];

        const files = this.files;
        if (files.length > maxFiles) {
            alert(`You can only upload a maximum of ${maxFiles} images.`);
            this.value = ''; // Clear the file input
            return; // Prevent further processing
        }

        for (let i = 0; i < files.length; i++) {
            const file = files[i];
            if (allowedImageTypes.includes(file.type)) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    // Create a container div for each image
                    const imageCard = document.createElement('div');
                    imageCard.classList.add('image-card');

                    // Create an image element
                    const image = document.createElement('img');
                    image.src = e.target.result;
                    image.classList.add('uploaded-image');

                    // Create a delete button for the image
                    const deleteButton = document.createElement('button');
                    deleteButton.textContent = 'Delete';
                    deleteButton.addEventListener('click', function () {
                        // Remove the image card from the DOM
                        imageCard.remove();
                        // Remove the corresponding file from the files array
                        files.splice(i, 1);

                        // Create a new input element and copy the remaining files to it
                        const newInput = document.createElement('input');
                        newInput.type = 'file';
                        newInput.name = 'images';
                        newInput.id = 'fileInput';
                        newInput.multiple = true;
                        for (let j = 0; j < files.length; j++) {
                            newInput.files[j] = files[j];
                        }

                        // Replace the old input with the new one
                        const oldInput = document.getElementById('fileInput');
                        oldInput.parentNode.replaceChild(newInput, oldInput);
                        
                        // Call the change event again to update the images
                        newInput.dispatchEvent(new Event('change'));
                    });

                    // Append the image and delete button to the container
                    imageCard.appendChild(image);
                    imageCard.appendChild(deleteButton);

                    // Append the container to the image container
                    imageContainer.appendChild(imageCard);
                };

                reader.readAsDataURL(file);
            } else {
                alert('Please select only image files (JPEG, PNG, GIF).');
                this.value = ''; // Clear the file input
                return; // Prevent further processing
            }
        }
    });
</script>


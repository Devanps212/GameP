     }
  </script>
  <script>
  const forms = document.getElementById('forms');

    forms.addEventListener('submit', function (event) {
      event.preventDefault(); 
      const categoryname = forms.querySelector('[name="name"]').value;
      
      fetch(`/admin/addcategory?name=${categoryname}`, {
        method: "POST",
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.status) {
            Swal.fire({
              icon: 'success',
              title: data.message,
              showConfirmButton: false,
              timer: 3000,
            }).then(() => {
              location.reload();
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: data.message,
              showConfirmButton: false,
              timer: 3000,
            });
          }
        })
        .catch(error => {
          Swal.fire({
            icon: 'error',
            title: 'An error occurred while adding the category',
            showConfirmButton: false,
            timer: 3000,
          });
        });
    });

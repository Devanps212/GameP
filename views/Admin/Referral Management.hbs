  <script>
    function change(userId) {
    Swal.fire({
        title: 'Are you sure?',
        text: 'You are about to change the referral code. This action cannot be undone.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, change it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // User clicked "Yes, change it!"
            console.log("userId :", userId);

            fetch(`/admin/change/${userId}`, {
                method: "POST",
            })
            .then((response) => {
                if (response.status == 200) {
                    // Show a success message without closing automatically
                    Swal.fire({
                        icon: 'success',
                        title: 'Referral Code Changed',
                        text: 'Referral code has been changed',
                        showConfirmButton: true, // Keep the confirmation button
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    // Show an error message without closing automatically
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error in changing referral code',
                        showConfirmButton: true, // Keep the confirmation button
                    });
                }
            })
            .catch((error) => {
                console.error(error);
                // Show an error message without closing automatically
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Internal server error',
                    showConfirmButton: true, // Keep the confirmation button
                });
            });
        }
    });
}


function Delete(userId)
{
    swal.fire({

    const ImgTypes = ['image/jpeg', 'image/png', 'image/gif']

    // Get the total number of images (previously uploaded + newly uploaded)
    const totalImages = imageContainer.querySelectorAll('.upload__img-box').length + files.length;
    
    for(let i = 0; i < files.length; i++)
    {
      const file = files[i]

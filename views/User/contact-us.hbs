<script>
    const form = document.getElementById('contactForm')

    form.addEventListener('submit', function()
    {
        const formDatas = new FormData(form)
        const name = formDatas.get('name');
        const email = formDatas.get('email');
        const subject = formDatas.get('subject');
        const message = formDatas.get('message');

        fetch('/submitMessage', {
            method:"POST",
            headers: {
                'Content-Type': 'application/json', // You can use 'application/x-www-form-urlencoded' for form data
            },
            body: JSON.stringify({
                name,
                email,
                subject,
                message,
            }),
        })
        .then(response=>
        {
            console.log(response)
            if(response.status == 200)
            {
                swal.fire({
                    icon:"success",
                    title:"Message Submitted",
                    text:"Thank you for getting in touch with us. We will respond to your inquiry shortly."
                })
            }
            else
            {
                swal.fire({
                    icon:"error",
                    title:"Sorry",
                    text:"Cannot send the message Please try again"
                })
            }
        })
        .catch(error=>
        {
            swal.fire({
                icon:"error",
                title:"Sorry",
                text:"Server is busy, Try after sometimes"
            })
            consol.log(error)
        })
    })
</script>
